<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pea">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sana">

    <Button
        android:id="@+id/balikon"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="@color/black"
        android:text="Back" />

        <Button
            android:id="@+id/pronounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sana"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-760dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@color/black"
            android:onClick="play"
            android:text="Pronounce"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/balikon"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-28dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Sana all"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/ak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-28dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:text="Meaning: Nawa'y lahat o sana lahat














                                                                       - Ito ay isang ekspresyon na ginagamit upang ipahayag ang pagnanais na sana ay lat ng tao ay makaranas o magkaroon ng isang bagay na mayroon ang iba.
                                                                         - Madalas itong gamitin sa social media bilang reaksiyon sa mga bagay na nakakainggit o kahanga-hanga

"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/ex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ak"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-11dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:gravity="center_horizontal"
            android:padding="2dp"
            android:text="Example:"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/sana"
            android:layout_width="390dp"
            android:layout_height="450dp"
            android:layout_below="@id/ak"
            android:layout_marginTop="17dp"
            android:src="@drawable/sana" />


    </RelativeLayout>
</ScrollView>